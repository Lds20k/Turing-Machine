{
    "tasks": [
        {
            "label": "Compile and run C for gdb",
            "type": "shell",
            "command": "g++",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "-O2",
                "-Wall",
                "-g",
                "${workspaceFolder}\\main.c",
                "-o",
                "${workspaceFolder}\\main.out",
                "-O0",
                "-fno-inline"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe arquivo de build ativo",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ],
    "version": "2.0.0"
}