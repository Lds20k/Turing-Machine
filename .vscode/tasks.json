{
    "tasks": [
        {
            "label": "Compile C for gdb",
            "type": "shell",
            "command": "gcc",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "-O2",
                "-Wall",
                "-g",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/main.out",
                "${workspaceFolder}/libs/graph.c",
                "${workspaceFolder}/libs/transition.c",
                "${workspaceFolder}/libs/turing_machine.c",
                "-O0",
                "-fno-inline"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}